@model NumRot2.Models.personas

@{
    ViewBag.Title = "Editar Registro";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Editar Registro</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-secondary">Información de Persona</h4>
                    <hr class="mb-4" />
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Campo Número de Cédula -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.numero_cedula, "Número de Cédula", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.numero_cedula, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.numero_cedula, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Primer Nombre -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.primer_nombre, "Primer Nombre", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.primer_nombre, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.primer_nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Segundo Nombre -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.segundo_nombre, "Segundo Nombre", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.segundo_nombre, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.segundo_nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Primer Apellido -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.primer_apellido, "Primer Apellido", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.primer_apellido, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.primer_apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Segundo Apellido -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.segundo_apellido, "Segundo Apellido", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.segundo_apellido, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.segundo_apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Teléfono -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.telefono, "Teléfono", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Correo Electrónico -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.correo, "Correo Electrónico", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Dirección -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.direccion, "Dirección", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Edad -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.edad, "Edad", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                            @Html.ValidationMessageFor(model => model.edad, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Campo Género -->
                    <div class="form-group row mt-3">
                        @Html.LabelFor(model => model.genero, "Género", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.genero, new SelectList(new[] {
                                new { Value = "M", Text = "Masculino" },
                                new { Value = "F", Text = "Femenino" },
                                new { Value = "O", Text = "Otro" }
                            }, "Value", "Text"), "-- Selecciona --", new { @class = "form-control shadow-sm" })
                            @Html.ValidationMessageFor(model => model.genero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="form-group row mt-4">
                        <div class="col-md-10 offset-md-2">
                            <input type="submit" value="Guardar" class="btn btn-success shadow-sm" />
                            <a href="@Url.Action("Index", "personas")" class="btn btn-secondary shadow-sm ml-2">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


